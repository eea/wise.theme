<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  lang="en"
  metal:use-macro="context/main_template/macros/master"
  i18n:domain="plone"
  >

  <metal:content-core fill-slot="content-core">
    <metal:content-core define-macro="content-core">
      <div class="row">
        <div class ="col-xs-12 col-md-4" 
                  tal:repeat="folder context/listFolderContents">
          <h4 class="title" tal:content="folder/title" 
              tal:condition="python: folder.Type() == 'Folder'"></h4>
            <img tal:condition="folder/image" 
                  tal:attributes="src python: folder.absolute_url() + '/@@images/image/preview'"/>
            <div class="summary" tal:content="folder/Description">Summary</div>
        </div>
      </div>
    </metal:content-core>
  </metal:content-core>
</html>
