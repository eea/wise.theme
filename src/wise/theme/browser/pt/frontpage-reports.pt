<div class="frontpage-reports-container">
  <h4>Latest Publications &amp; Reports</h4>
  <div class="reports">
    <div tal:repeat="report view/reports" class="report-tile">
      <div class="left">
        <img tal:attributes="src string:${report/absolute_url}/@@images/image/thumb" />
      </div>
      <div class="right">
        <h5 tal:content="report/Title">Title</h5>
        <div>
          <div class="published-info">Published on: <span tal:content="python: report.effective().Date()" >Effective</span></div>
          <p><span tal:content="report/Description">
            Description
            </span>
            <a href="" tal:attributes="href report/remoteUrl">Open it</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
