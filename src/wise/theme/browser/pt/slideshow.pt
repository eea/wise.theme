<div class="frontpage-header-slide-container">
    <tal:def tal:define="images view/images;">
    <tal:cond tal:condition="images">

      <script src="++theme++wise-theme/static/js/jquery-cycle.js"></script>

      <script>
        // <![CDATA[
        jQuery(document).ready(function() {
        $('.pics').cycle({
        fx: 'fade',
        pauseOnHover: true,
        timeout: 4000,
        speed: 4000,
        swipe: true,
        prev: '#prev',
        next: '#next'
        });
        });
        // ]]>
      </script>

      <div class="slider-container">
        <div id="slideshow" class="pics" data-cycle-slides=".slideContainer">

          <tal:rep repeat="image images">
            <div class="slideContainer"
              tal:define="title image/Title;
              description image/Description;
              url image/getURL;
              obj image/getObject;">

              <div class="slider-caption container">
                <div class="slider-title">
                  <div tal:content="title">
                    Welcome to WISE - MARINE
                  </div>
                </div>

                <div class="slider-description">
                  <p tal:content="description">
                    WISE - Marine is a gateway to information on European marine
                    in support of ocean governance and ecosystem based management.
                  </p>
                </div>

                <div class="slider-copyright" tal:condition="obj/Rights|nothing">
                  <p tal:content="obj/Rights">Image copyright</p>
                </div>
              </div>

              <div class="slider-layer"></div>
              <a href="#">
                <div class="slider-image-wrapper">
                  <div class="slider-image lazyload"
                    tal:attributes="style string:background-image:url('${url}')">
                  </div>
                </div>
              </a>
            </div>
          </tal:rep>
        </div>

        <div class="container slider-actions" tal:condition="python: len(images) > 1">
          <a id="prev" class="slide-prev slide-arrow" href="#"></a>
          <a id="next" class="slide-next slide-arrow" href="#"></a>
        </div>
      </div>

    </tal:cond>
  </tal:def>
</div>
